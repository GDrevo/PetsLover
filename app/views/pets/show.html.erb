<div class="main-container">
  <div class="left-container">
    <div class="left-part">
      <div class="selected-image">
        <%= cl_image_tag @pet.photo.key, height: 400, width: 500, crop: :fill %>
      </div>
      <%# <div class="other-images">
      </div> %>
      <div class="advert-stats">
        <div class="stat">
          <p>Added on <%= @pet.created_at.day %>/<%= @pet.created_at.month %>/<%= @pet.created_at.year %></p>
        </div>
        <div class="stat">
          <p>Likes 0</p>
        </div>
        <div class="stat">
          <p>Viewed 50</p>
        </div>
      </div>
      <div class="pet-description">
        <h2>Description</h2>
        <p><%= @pet.description %></p>
      </div>
    </div>
    <br>
    <br>
    <h2>Related adverts</h2>
    <br>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
      <h2>Pet's specie and breed</h2>
      <h2>250€</h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
      </div>
    </div>
  </div>
  <div class="right-container">
    <div class="widget">
      <div class="button">
        <p>
          <%= @pet.price %> €
        </p>
      </div>
      <div class="">
        <a class="btn btn-gradient show-button" href="#">
          Message
        </a>
      </div>
      <div class="">
        <button type="button" class="btn btn-gradient show-button" data-toggle="modal" data-target="myModal">Buy now</button>
      </div>
      <div class="user-pet-card">
        <div class="user-information">
          <div class="user-avatar">

          </div>
          <div class="user-details">
            <h3>USERNAME</h3>
            <p>London</p>
            <p>11 minutes</p>
            <p>member since: <%= @pet.user.created_at.year %></p>
          </div>
        </div>
        <div class="buttons-container">
          <div class="">
            <button type="button" class="btn btn-gradient show-button" data-toggle="modal" data-target="myModal">Buy now</button>
          </div>
          <div class="card-buttons">
            <div>
              <a class="btn btn-gradient show-button-half" href="#">
                Share advert
              </a>
            </div>
            <div>
              <a class="btn btn-gradient show-button-half" href="#">
                Report advert
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="myModalLabel">Congratulations !</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Your order has been confirmed, thank you for your purchase &#128522;</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>
